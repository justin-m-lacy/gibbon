{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "lib",
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "declarationDir": "types",
    "importsNotUsedAsValues": "remove",
    "moduleResolution": "node",
    "jsx": "preserve",
    "skipLibCheck": true,
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "pixi.js"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "./index.ts",
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "types"
  ]
}